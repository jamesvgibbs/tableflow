{
    "name": "seatherder",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "concurrently --kill-others \"npm:dev:backend\" \"npm:dev:frontend\"",
        "dev:frontend": "next dev",
        "dev:backend": "convex dev --typecheck-components --live-component-sources",
        "generate": "convex dev --once --typecheck-components",
        "build": "npx convex codegen && next build",
        "build:vercel": "npx convex deploy && next build",
        "build:ci": "next build",
        "start": "next start",
        "lint": "eslint",
        "kill": "pkill -f 'next dev' 2>/dev/null; pkill -f 'convex dev' 2>/dev/null || echo 'All clear'",
        "linecount": "cloc . --exclude-dir=node_modules,dist,build,coverage,.next --exclude-ext=json,lock,md",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:e2e:chromium": "playwright test --project=chromium"
    },
    "dependencies": {
        "@clerk/nextjs": "^6.37.1",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@radix-ui/react-accordion": "^1.2.12",
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-collapsible": "^1.1.12",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-popover": "^1.1.15",
        "@radix-ui/react-progress": "^1.1.8",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slider": "^1.3.6",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@types/qrcode": "^1.5.6",
        "@use-gesture/react": "^10.3.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "convex": "^1.31.3",
        "framer-motion": "^12.26.1",
        "jszip": "^3.10.1",
        "lucide-react": "^0.563.0",
        "next": "^16.1.6",
        "next-themes": "^0.4.6",
        "nextjs": "^0.0.3",
        "papaparse": "^5.5.3",
        "qrcode": "^1.5.4",
        "qrcode.react": "^4.2.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.0",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^25.1.0",
        "@types/papaparse": "^5.5.1",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/uuid": "^10.0.0",
        "concurrently": "^9.2.1",
        "eslint": "^9",
        "eslint-config-next": "^16.1.6",
        "playwright": "^1.57.0",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5"
    }
}
